@model IEnumerable<EntityLayer.Concrete.Comment>

<h1>Yorumlar</h1>

@if (Model.Count() == 0)
{
    <br />
    <h4>Daha önce yorum yapılmamış.</h4>
}
else
{
    @foreach (var x in Model)
    {
        <div class="media">
            <img src="images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@x.CommentUserName</h5>
                <p>
                    @x.CommentContent
                </p>

            </div>
        </div>
    }
}
