@using EntityLayer.Concrete
@model List<MessageTwo>

<a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
    <i class="mdi mdi-email-outline"></i>
    @foreach (var x in Model)
    {
        if (x.MessageStatus == true)
        {
            <span class="count-symbol bg-warning"></span>
        }
    }
</a>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var x in Model)
    {
        if(x.MessageStatus == true){
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="~/writer/assets/images/faces/face4.jpg" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal"><b>@x.SenderUser.WriterNameSurname</b> Mesaj Gönderdi.</h6>
                <p class="text-gray mb-0"> @x.MessageDate.ToShortDateString()</p>
            </div>
            </a>
        }
    }
            <a href="/Message/InBox" style="color:black;"><h6 style="font-size:15px" class="p-3 mb-0 text-center">Toplam @Model.Count Mesajınız var</h6></a>

</div>
