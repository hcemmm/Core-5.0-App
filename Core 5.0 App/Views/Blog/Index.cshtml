@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
	<h3 class="tittle">Blog Yazıları</h3>
	<div class="inner-sec">
		<!--left-->
		<div class="left-blog-info-w3layouts-agileits text-left">
			<div class="row">
				@foreach (var x in Model)
				{
				
				<div class="col-lg-4 card">
					<a href="single.html">
						<img src="~/web/images/1.jpg" class="card-img-top img-fluid" alt="">
					</a>
					<div class="card-body">
						<ul class="blog-icons my-4">
							<li>
								<a href="#">
									<i class="far fa-calendar-alt"></i> @(((DateTime)x.BlogCreateDate).ToString("dd-MMMM-yyyy"))
								</a>
							</li>
							<li class="mx-2">
								<a href="#">
									<i class="far fa-comment"></i> 21
								</a>
							</li>
							<li>
								<a href="#">
									<i class="fas fa-eye"></i> @x.Category.CategoryName
								</a>
							</li>

						</ul>
						<h5 class="card-title">
							<a href="single.html">@x.BlogTitle</a>
						</h5>
						<p class="card-text mb-3">@x.BlogContent @*.Substring(0,x.BlogContent.Substring(0,11).LastIndexOf(" "))...*@ </p>
						<a href="/Blog/BlogReadAll/@x.BlogID" class="btn btn-primary read-m">Daha Fazla</a>
					</div>
				</div>

				}

				<nav aria-label="Page navigation example">
					<ul class="pagination justify-content-left mt-4">
						<li class="page-item disabled">
							<a class="page-link" href="#" tabindex="-1">Önce</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">1</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">2</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">3</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">Sonra</a>
						</li>
					</ul>
				</nav>
			</div>
			<!--//left-->
		</div>
	</div>
</div>
