@using EntityLayer.Concrete
@model List<MessageTwo>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1 style="text-align:center">Mesajlar</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>İşlem</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.MessageID</td>
            <td>@x.MessageSubject</td>
            <td>@x.SenderUser.WriterNameSurname</td>
            <td>@(((DateTime)x.MessageDate).ToString("dd-MMMM-yyyy"))</td>
            <td><a href="/Message/MessageDetail/@x.MessageID" class="btn btn-danger">Devamı...</a></td>
        </tr>
    }
</table>

