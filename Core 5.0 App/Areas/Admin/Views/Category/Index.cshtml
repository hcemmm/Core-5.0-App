@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Kategori Adı</td>
        <td>Aktif Yap</td>
        <td>Sil</td>
        <td>Düzenle</td>
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.CategoryID</td>
            <td>@x.CategoryName</td>
            <td><a href="#" class="btn btn-primary">AKTİF</a></td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@x.CategoryID"  class="btn btn-danger">SİL</a>
            </td>
            <td><a href="#" class="btn btn-warning">DÜZENLE</a></td>
        </tr>
    }
</table> 
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page => Url.Action("Index",new {page})) 