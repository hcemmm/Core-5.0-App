@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1> Yeni Kategori</h1>
<br />

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=> x.CategoryName, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=> x.CategoryName, String.Empty, new { @style="color:red;!important;font-size:13px"})

    <br />

    @Html.Label("Kategori Açıklaması İçeriği")
    @Html.TextAreaFor(x=> x.CategoryDescription,15,3, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=> x.CategoryDescription, String.Empty, new { @style="color:red;!important;font-size:13px"})

    <br />

    <button class="btn btn-primary">Kaydet</button>
}
